{
  "name": "expense-backend",
  "version": "1.0.0",
  "description": "sample expense tracker backend ",
  "main": "server.js",
  "scripts": {
    "prod-server": "npm run clean && babel . --ignore node_modules,Client --out-dir build/dist",
    "clean": "rimraf dist && mkdir build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon --exec babel-node server.js",
    "client": "npm start --prefix Client",
    "prod-client":"cd ./Client && npm run build",
    "heroku-postbuild":"NPM_CONFIG_PRODUCTION=false cd Client && npm install && npm run build",
    "start": "node build/dist/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "npm run prod-server && node dist/server.js"
  },
  "author": "Shazam",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "mongoose": "^5.9.26",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  }
}
